{
  "scripts": {
    "dev": "NODE_ENV=dev vite",
    "build": "nest build",
    "start": "nest build && sls offline",
    "deploy": "nest build && sls deploy",
    "deploy:local": "nest build && sls deploy --stage local",
    "deploy:prod": "nest build && sls deploy --stage prod",
    "test": "vitest --run",
    "docs": "compodoc -p tsconfig.doc.json -s",
    "format": "prettier src --write --ignore-unknown",
    "lint": "eslint src --ext .ts",
    "prepare": "husky install",
    "commit": "git add . && git commit -m ''"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.427.0",
    "@aws-sdk/client-sns": "^3.427.0",
    "@fastify/aws-lambda": "^3.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.11.2",
    "@nestjs/cache-manager": "^2.1.0",
    "@nestjs/common": "^10.2.7",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-fastify": "^10.2.7",
    "@nestjs/swagger": "^7.1.13",
    "aws-jwt-verify": "^4.0.0",
    "aws-lambda": "^1.0.7",
    "cache-manager": "^5.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dynamoose": "^3.2.1",
    "fastify": "^4.23.2",
    "nestjs-cls": "^3.5.1",
    "nestjs-dynamoose": "^0.5.5",
    "rxjs": "^7.8.1",
    "swagger-ui-dist": "^5.9.0",
    "type-fest": "^4.4.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.21",
    "@nestjs/cli": "^10.1.18",
    "@nestjs/testing": "^10.2.7",
    "@serverless/typescript": "^3.30.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.92",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/aws-lambda": "^8.10.124",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "commitizen": "^4.3.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "serverless": "^3.35.2",
    "serverless-associate-waf": "^1.2.1",
    "serverless-domain-manager": "^7.1.2",
    "serverless-esbuild": "^1.48.4",
    "serverless-localstack": "^1.1.2",
    "serverless-offline": "^13.2.0",
    "serverless-prune-plugin": "^2.0.2",
    "ts-node": "^10.9.1",
    "vite": "^4.4.11",
    "vite-plugin-node": "^3.0.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "bash -c tsc --noEmit",
      "vitest related --run"
    ],
    "*.!ts": "prettier --write --ignore-unknown"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
